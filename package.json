{
  "name": "leira-ui",
  "version": "1.3.0",
  "description": "Biblioteca de componentes React + Tailwind CSS. Componentes modernos, elegantes y listos para usar.",
  "type": "module",
  "main": "./dist-lib/leira-ui.umd.js",
  "module": "./dist-lib/leira-ui.es.js",
  "types": "./dist-lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist-lib/index.d.ts",
      "import": "./dist-lib/leira-ui.es.js",
      "require": "./dist-lib/leira-ui.umd.js"
    },
    "./styles.css": "./dist-lib/styles.css",
    "./styles": "./dist-lib/leira-ui.css"
  },
  "files": [
    "dist-lib"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --mode lib && tsc -p tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build:lib"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "neostandard": "^0.12.2",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  },
  "keywords": [
    "react",
    "tailwindcss",
    "ui",
    "components",
    "typescript",
    "button",
    "modal",
    "card",
    "input",
    "accordion",
    "carousel",
    "tabs"
  ],
  "author": "Leira UI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/citylightsnewer/leira-ui"
  },
  "homepage": "https://leira-ui.vercel.app",
  "bugs": {
    "url": "https://github.com/citylightsnewer/leira-ui/issues"
  }
}